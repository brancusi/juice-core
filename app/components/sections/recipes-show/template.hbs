<div class="grid-noGutter stretch">
  <div class="col-4_sm-12_md-6">
    {{ui/label-button
        class='back-button'
        label='< Back to recipes'
        onClick=(action navigateTo 'recipes')}}

    {{editors/recipe-editor
        handleUpdate=handleUpdate
        addNode=addNode
        addUom=addUom
        removeUom=removeUom
        deleteEdge=deleteEdge
        createAndAddNode=createAndAddNode
        destroyNode=destroyNode
        nodes=nodes
        model=model}}
  </div>

  <div class="col-8_sm-12_md-6">
    {{editors/sample-production product=model}}
  </div>
</div>
