<div class="card-yellow mt-8 rounded-lg p-10">
  <div class="flex items-center">
    <label class="text-2xl font-light">{{model.Ingredient}} Type</label>
    <input
      class="text-4xl font-light text-grey-darker bg-transparent border-b ml-6 flex-auto pb-2"
      value={{model.tags}}
      placeholder="Produce, Bulk, Spice etc."
      oninput={{action
        (action
          handleUpdate
          model
          "tags")
        value="target.value"
      }}
    >
  </div>

  <div class="mt-10 flex items-center">
    <label class="text-2xl font-light pr-6">We use this by the</label>
    {{#power-select
      selected=model.uom
      options=uoms
      onchange=(action handleUpdate model "uom")
    as |uom|
    }}
      {{uom}}
    {{/power-select}}
  </div>

  <div class="mt-10 flex-col items-centerr">
    <label class="text-2xl font-light">Only show this in the following unit(s)</label>

    <div class="mt-4">
      {{#power-select-multiple
        options=uoms
        selected=model.forceUomsParsed
        placeholder="Any"
        onchange=(action "addUom")
      as |uom|
      }}
        {{uom}}
      {{/power-select-multiple}}
    </div>
  </div>
  <div class="mt-8 text-right">
    {{ui/indicators/auto-save-indicator}}
  </div>
</div>
