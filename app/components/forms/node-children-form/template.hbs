<div class="flex flex-col">

  <div class="search">
    {{#power-select
      options=validNodes
      searchField="label"
      search=(perform searchTask)
      onchange=(action "handleSelect")
      placeholder="Search and add recipes or ingredients..."

    as |node|
    }}
      {{node.label}}
    {{/power-select}}
  </div>

  {{#if hasChildren}}
    <div class="z-10 py-8">
      {{#each model.children as |edge index|}}
        {{rows/line-item-row
          index=(inc index)
          model=edge
          handleUpdate=handleUpdate
          deleteEdge=deleteEdge
          uoms=uoms
        }}
      {{/each}}
    </div>
  {{else}}
    <div class="flex justify-center items-center p-12">
      <p class="text-5xl text-grey font-thin py-8">
        Alright, letâ€™s start creating!
      </p>
    </div>
  {{/if}}
</div>

{{#if showCreateIngredient}}
  {{dialogs/new-ingredient
    cancel=(action "cancelCreateIngredient")
    create=createAndAddNode
    label=tempIngredientName
  }}
{{/if}}
