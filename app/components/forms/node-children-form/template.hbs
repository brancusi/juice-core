<div class="flex flex-col">
  <div class="search z-20">
    {{ui/simple-search
      options=validNodes
      onselect=(action "handleSelect")
      placeholder=searchPlaceholder
      localOnly=localOnly
    }}
  </div>

  <div class="mx-8 pb-8">
    {{#sections/auto-save-indicator}}
      {{#if hasChildren}}
        <div class="z-10 py-8">
          {{#each children as |edge|}}
            <div class="my-4">
              {{rows/line-item-row
                model=edge
                handleUpdate=handleUpdate
                handleDestroy=deleteEdge
                uoms=uoms
              }}
            </div>
          {{/each}}
        </div>
      {{else}}
        <div class="flex justify-center items-center py-12">
          <p class="text-5xl text-grey font-thin py-8">
            {{emptyNodeText}}
          </p>
        </div>
      {{/if}}
    {{/sections/auto-save-indicator}}
  </div>

</div>

{{#if showCreateIngredient}}
  {{dialogs/new-item-wizard
    cancel=(action "cancelCreateIngredient")
    create=createAndAddNode
    itemLabel=tempIngredientName
  }}
{{/if}}
