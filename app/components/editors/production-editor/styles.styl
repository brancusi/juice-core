.info-section {
  margin-bottom: 1em;
}

.content-container {
  padding: 1em;
}

.header-container {
  justify-content: space-between;
  align-items: center;
  background: blue;
  color: white;
  padding: 1em 1em;
}

.date-container {
  align-items: baseline;

  .label {
    font-size: 1.5em;
    font-weight: bold;
  }
}

.date {
  font-size: 1.4em;

  input, input:focus {
    outline: none;
    border: none;
    border-bottom: 1px dashed rgba(grey, 0.5);
    background: none;
    color: white;
    width: 100%;
  }
}

.product-container-header {
  font-size: 1.2em;
  font-style: italic;
  font-weight: bold;
  border-bottom: 1px dashed rgba(grey, 0.5);
  margin-bottom: 1em;
  padding: 0 1em;
}


.product-row {
  padding: 0.5em 1em;
  align-items: baseline;
}

.product-row {
  input {
    border: none;
    border-bottom: 1px dashed rgba(grey, 0.5);
    padding: 0.25em;
    font-size: 1.3em;
    background: none;
    width: 100%;
  }

  .index {
    font-style: italic;
    font-weight: bold;
  }

  .label {
    font-size: 1.2em;
  }
}

.product-row:nth-child(even) {
  background: $light-blue;
}
