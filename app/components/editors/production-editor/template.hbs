<div class="flex flex-col shadow-md bg-blue-lightest w-full">
  <div class="text-5xl font-bold text-grey-darkest p-12">
    Edit Production
  </div>
  <div class="flex-row md:flex items-baseline justify-between pl-12 pr-12 pt-4 pb-4">

    <div class="flex-row md:flex items-baseline">
      <p class="text-2xl mr-4 mb-12 md:mb-0">Production for:</p>
      <label class="border-4 p-2 pl-4 pr-4 bg-white border-grey-light text-lg hover:border-grey">
        {{pikaday-input format="ddd MM/DD/YY" value=model.date onSelection=updateProductionDate}}
      </label>
    </div>

    <div class="invisible md:visible">
      {{ui/async-button
          label='Print Production Sheets'
          icon='print'
          onClick=(action 'printAll')}}
    </div>
  </div>

  <div class="flex flex-col shadow-inner bg-teal-lightest px-12 py-4">
  {{#cp-panel as |panel|}}
    {{#panel.toggle}}
      <div class="flex items-center justify-between">
        <div class="flex items-baseline">
          <p class="text-3xl">Adjustments</p>
          <p class="italic text-sm ml-4">Add stock from previous productions</p>
        </div>
        {{#if panel.isOpen}}
          {{fa-icon "chevron-up" class="text-2xl cursor-pointer"}}
        {{else}}
          {{fa-icon "chevron-down" class="text-2xl cursor-pointer"}}
        {{/if}}
      </div>
    {{/panel.toggle}}

      {{#panel.body}}
        <div class="py-4">
          <div class="py-2 text-4x italic">
            Search for recipes or ingredients and add in quantities on hand. These will be subtracted from your production sheets upon printing.
          </div>
          <div class="w-1/2 py-4">
            {{#power-select
                options=validSubtractableNodes
                searchField="label"
                onchange=createAdjustmentEdge
                placeholder="Search and add recipes or ingredients..." as |node|}}
                  {{node.label}}
            {{/power-select}}
          </div>

          {{#each adjustmentEdges as |edge index|}}
            <div class="flex justify-between items-baseline pt-2 pb-2 border-b border-grey-light border-dotted">

              <div class="flex items-baseline">
                <div class="mr-2 w-10 text-lg italic">
                  {{inc index}}.
                </div>

                {{#link-to 'products.show' edge.b.id tabindex="-1"}}
                    <div class="text-2xl bold hover:border-teal-light border-b-2 border-teal-lightest">
                      {{edge.b.label}}
                    </div>
                {{/link-to}}
              </div>

              <div class="flex items-baseline">
                <input class='p-2 border-2 border-teal-lighter text-2xl w-24 focus:border-teal'
                  value={{edge.q}}
                  oninput={{action (action 'handleQuantityUpdate' edge) value="target.value"}}
                  onblur={{action 'handleQuantityBlur' edge}}>

                <p class="italic text-lg ml-4">{{edge.b.uom}}</p>
              </div>

            </div>
          {{/each}}
        </div>
      {{/panel.body}}

  {{/cp-panel}}
  </div>

  <div class="flex pl-12 pr-12 pt-4 pb-4 bold text-2xl justify-between items-baseline bg-blue-light text-white">
    <div class="flex items-baseline">
      <div class="w-10">#</div>
      <div class="label-col">Product Name</div>
    </div>

    <div class="w-24">Total</div>
  </div>

  <div class="pl-12 pr-12 pt-6">
    {{#each sortedRow as |edge index|}}
      <div class="flex justify-between items-baseline pt-2 pb-2 border-b border-grey-light border-dotted">

        <div class="flex items-baseline">
          <div class="mr-2 w-10 text-lg italic">
            {{inc index}}.
          </div>

          {{#link-to 'products.show' edge.b.id tabindex="-1"}}
              <div class="text-2xl bold hover:border-blue-light border-b-2 border-blue-lightest">
                {{edge.b.label}}
              </div>
          {{/link-to}}
        </div>

        <input class='p-2 border-2 border-blue-lighter text-2xl w-24 focus:border-blue'
          value={{edge.q}}
          oninput={{action (action 'handleQuantityUpdate' edge) value="target.value"}}
          onblur={{action 'handleQuantityBlur' edge}}>

      </div>
    {{/each}}
  </div>
</div>
