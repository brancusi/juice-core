& {
  cursor: pointer;
  padding: 1em 1em;
  .ui-container {
    opacity: 0;
     transition: opacity 0.25s;
  }
  align-items: center;
}

&:nth-child(even) {
  background: blue;
}

&:hover, &:nth-child(even):hover {
  background-color: rgba(red, 0.2);

  .ui-container {
    opacity: 1;
  }
}

.index {
  font-weight: bold;
}
